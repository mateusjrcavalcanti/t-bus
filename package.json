{
  "name": "unibus",
  "private": true,
  "engines": {
    "node": ">=20.12.0"
  },
  "packageManager": "pnpm@9.0.1",
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -xdf node_modules .turbo",
    "clean:workspaces": "turbo clean",
    "db:push": "pnpm -F db push",
    "db:studio": "pnpm -F db studio",
    "db:migrate": "pnpm -F db migrate",
    "db:generate": "pnpm -F db generate",
    "db:seed": "pnpm -F db seed",
    "docker:build": "docker compose up -d --build postgres web mosquitto pgadmin proxy websocket",
    "docker:dev": "docker compose up -d postgres web mosquitto pgadmin proxy websocket",
    "docker:down": "docker compose down",
    "docker:certbot": "docker compose up -d certbot",
    "dev": "turbo dev --parallel",
    "dev:web": "turbo dev --filter=@unibus/web --parallel",
    "format": "turbo format --continue -- --cache --cache-location node_modules/.cache/.prettiercache",
    "format:fix": "turbo format --continue -- --write --cache --cache-location node_modules/.cache/.prettiercache",
    "lint": "turbo lint --continue -- --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:fix": "turbo lint --continue -- --fix --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "typecheck": "turbo typecheck",
    "ui-add": "pnpm -F ui ui-add",
    "precommit": "turbo lint && turbo format && turbo typecheck"
  },
  "devDependencies": {
    "@unibus/prettier-config": "workspace:*",
    "@turbo/gen": "^1.13.2",
    "prettier": "^3.2.5",
    "turbo": "^1.13.2",
    "typescript": "^5.4.5"
  },
  "prettier": "@unibus/prettier-config"
}
